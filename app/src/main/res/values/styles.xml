<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>


    </style>

    <style name="EditTextRegister">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily" tools:targetApi="o">@font/lato_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextInputRegister">
        <item name="android:padding">15dp</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SubTitleRegister" parent="SubTitleBase">
        <item name="android:gravity">center</item>
    </style>

    <style name="SubTitleBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorCinza</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SubTitleCadastrar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorRoxo</item>
        <item name="android:textSize">14sp</item>
    </style>z

    <style name="SubTitleCompany">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="TitleRegister">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/poppins_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorCinzaLight</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/poppins_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TitleText2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/poppins_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorCinzaLight</item>
        <item name="android:textSize">20sp</item>
    </style>

