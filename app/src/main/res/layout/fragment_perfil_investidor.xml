<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_perfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments_investidor.PerfilFragment_Investidor">

    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activity.home.BaseFragmentInvestidor">


        <LinearLayout
            android:id="@+id/linearLayout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">


            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTranspatenteLight"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/foto_perfil_investidor_id"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/investidor_icon2"/>

                        <LinearLayout style="@style/TextInputRegister"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginRight="10dp"
                                android:layout_centerVertical="true"
                                android:background="@drawable/mala_ic"
                                android:scaleType="fitXY" />

                            <TextView
                                android:id="@+id/nome_perfil_investidor_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nome do investidor"
                                android:textColor="@color/colorCinza"
                                android:textSize="24dp"
                                app:fontFamily="@font/lato_regular" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/text_cidade_perfil_investidor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginLeft="10dp"
                                android:text="Cidade"
                                android:fontFamily="@font/lato_regular"
                                android:textColor="@color/colorCinza" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="1dp"
                                android:text="|"
                                android:textColor="@color/colorCinzaLight"
                                android:textSize="24dp" />

                            <TextView
                                android:id="@+id/text_empresa_perfil_investidor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginLeft="10dp"
                                android:text="Empresa"
                                android:fontFamily="@font/lato_regular"
                                android:textColor="@color/colorCinza" />
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/botao_iniciar_conversa_investidor_id"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="70dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="70dp"
                            android:background="@drawable/button_rounded_precionado_red"
                            android:gravity="clip_vertical|center_horizontal"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="14dp"
                                android:layout_marginBottom="14dp"
                                android:text="INICIAR CONVERSA "
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:fontFamily="@font/poppins_medium" />

                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

        <LinearLayout
            style="@style/TextInputRegister">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:background="@drawable/bibliografy_ic"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="0dp"
                android:text="BIOGRAFIA" />

        </LinearLayout>
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
                android:background="@drawable/button_custom_facebook">

            <TextView
                android:id="@+id/text_biografia_perfil_investidor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"
                android:text="Biografia"
                android:textSize="15dp"
                android:fontFamily="@font/lato_regular"

                android:layout_marginLeft="15dp" />
        </RelativeLayout>

            <LinearLayout
                style="@style/TextInputRegister">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/contacts_ic"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="CONTATOS" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/button_custom_facebook">

                <TextView
                    android:id="@+id/text_email_perfil_investidor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="10dp"
                    android:text="Email"
                    android:fontFamily="@font/lato_regular"/>

                <TextView
                    android:id="@+id/telefone_perfil_investidor_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="30dp"
                    android:text="Tel"
                    android:fontFamily="@font/lato_regular"/>
            </RelativeLayout>
            <LinearLayout
                style="@style/TextInputRegister">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/localization_ic"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="LOCAL" />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/button_custom_facebook">

                <TextView
                    android:id="@+id/estado_perfil_investidor_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estado"
                    android:fontFamily="@font/lato_regular"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/rua_perfil_investidor_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rua"
                    android:fontFamily="@font/lato_regular"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/bairro_perfil_investidor_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bairro"
                    android:fontFamily="@font/lato_regular"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>

            <TextView
                android:layout_marginTop="20sp"
                style="@style/SubTitleCompany"
                android:gravity="center"
                android:text="Aplicativo realizado pelos alunos de Sistemas
                                                        Projeto Aplicado - FHO 2019"
                app:fontFamily="@font/lato_regular"
                android:paddingBottom="10dp"
                android:textColor="@color/colorCinzaLight"/>

        </LinearLayout>
    </ScrollView>
    </FrameLayout>
</android.support.v4.widget.DrawerLayout>


