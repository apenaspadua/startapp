<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments_investidor.PerfilFragment_Investidor">

    <ScrollView
        android:id="@+id/scrollView_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activity.home.BaseFragmentInvestidor">


        <LinearLayout
            android:id="@+id/linearLayout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">


            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTranspatenteLight"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <ImageView
                            android:id="@+id/imagem_perfil_investidor_id"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/investidor_icon2"
                            android:scaleType="fitXY" />

                        <TextView
                            android:id="@+id/nome_perfil_investidor_id"
                            style="@style/TitleText"
                            android:paddingTop="5dp"
                            android:text="Nome do investidor"
                            android:textColor="@color/colorCinza"
                            android:textSize="24dp"
                            app:fontFamily="@font/lato_regular" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/text_cidade_perfil_investidor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginLeft="10dp"
                                android:text="Cidade"
                                android:textColor="@color/colorCinza" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="1dp"
                                android:text="|"
                                android:textColor="@color/colorCinzaLight"
                                android:textSize="24dp" />

                            <TextView
                                android:id="@+id/text_empresa_perfil_investidor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginLeft="10dp"
                                android:text="Empresa"
                                android:textColor="@color/colorCinza" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="1dp"
                                android:text="|"
                                android:textColor="@color/colorCinzaLight"
                                android:textSize="24dp" />

                            <TextView
                                android:id="@+id/text_email_perfil_investidor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginLeft="10dp"
                                android:text="Email"
                                android:textColor="@color/colorCinza" />

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/botao_iniciar_conversa_investidor_id"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="70dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="70dp"
                            android:background="@drawable/button_rounded_precionado_red"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="30dp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="15dp"
                                android:text="Iniciar Conversa "
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:fontFamily="@font/poppins_medium" />

                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <TextView
             style="@style/TitleRegister"
                android:paddingTop="20dp"
                android:text="Mais informaçōes"
                app:fontFamily="@font/lato_regular" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorTransparenteDark">

            <TextView
                android:id="@+id/data_perfil_investidor_id"
                style="@style/TitleText"
                android:padding="10dp"
                android:text="data de nascimento"
                android:textColor="@color/colorCinza"
                android:textSize="18dp"
                app:fontFamily="@font/lato_regular" />

            <TextView
                android:id="@+id/rua_perfil_investidor_id"
                style="@style/TitleText"
                android:padding="10dp"
                android:text="rua"
                android:textColor="@color/colorCinza"
                android:textSize="18dp"
                app:fontFamily="@font/lato_regular" />

            <TextView
                android:id="@+id/bairro_perfil_investidor_id"
                style="@style/TitleText"
                android:padding="10dp"
                android:text="bairro"
                android:textColor="@color/colorCinza"
                android:textSize="18dp"
                app:fontFamily="@font/lato_regular" />

            <TextView
                android:id="@+id/estado_perfil_investidor_id"
                style="@style/TitleText"
                android:padding="10dp"
                android:text="estado"
                android:textColor="@color/colorCinza"
                android:textSize="18dp"
                app:fontFamily="@font/lato_regular" />

            <TextView
                android:id="@+id/telefone_perfil_investidor_id"
                style="@style/TitleText"
                android:padding="10dp"
                android:text="telefone"
                android:textColor="@color/colorCinza"
                android:textSize="18dp"
                app:fontFamily="@font/lato_regular" />
        </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>

