<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:id="@+id/scrollView_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activity.home.BaseFragmentStartup">

        <LinearLayout
            android:id="@+id/linearLayout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                style="@style/SubTitleCompany"
                android:layout_marginTop="20sp"
                android:gravity="center"
                android:paddingBottom="20dp"
                android:text="Conheça um pouco mais desse investidor"
                android:textColor="@color/colorCinzaLight"
                app:fontFamily="@font/lato_regular" />

            <ProgressBar
                android:id="@+id/progressBar_perfilVistado_investidor"
                style="?android:attr/progressBarStyle"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:indeterminateTint="@color/colorPrimaryDark"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/relative_layout_nome_perfil"
                    android:layout_width="226dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginLeft="13dp"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nome_perfilperfilVistado_investidor_id"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Nome do Investidor"
                        android:textColor="@color/colorCinza"
                        android:textSize="24dp"
                        app:fontFamily="@font/lato_regular" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_cidade_perfilVistado_investidor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/lato_regular"
                            android:text="Cidade"
                            android:textColor="@color/colorCinza" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="1dp"
                            android:text="|"
                            android:textColor="@color/colorCinzaLight"
                            android:textSize="24dp" />

                        <TextView
                            android:id="@+id/text_empresa_perfilVistado_investidor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/lato_regular"
                            android:text="Razao"
                            android:textColor="@color/colorCinza" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearLayout_foto_investidor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_toEndOf="@+id/relative_layout_nome_perfil"
                    android:layout_toRightOf="@+id/relative_layout_nome_perfil"
                    android:orientation="vertical"
                    android:paddingTop="0dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/foto_perfilVistado_investidor_id"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="end"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/investidor_icon2" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="13dp"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp">

                <TextView
                    android:id="@+id/text_apresentacao_perfilVistado_investidor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/lato_regular"
                    android:text="Apresentacao"
                    android:textSize="15dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/botao_iniciar_conversa_perfilVisitado_investidor_id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="70dp"
                android:background="@drawable/button_ronded"
                android:orientation="horizontal"
                android:gravity="center">


                <TextView
                    android:id="@+id/text_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INICIAR CONVERSA "
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/poppins_medium" />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="30dp"
                android:background="@color/colorTransparenteDark"
                android:gravity="clip_vertical|center_horizontal"
                android:orientation="horizontal">
            </RelativeLayout>

            <LinearLayout style="@style/TextInputRegister"
                android:layout_marginTop="25dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/investidor_bio"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="0dp"
                    android:text="SOBRE O INVESTIDOR" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_custom_twitter"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_biografia_perfilVistado_investidor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/lato_regular"
                    android:text="Biografia"
                    android:textSize="15dp" />
            </RelativeLayout>

            <LinearLayout style="@style/TextInputRegister">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/contacts_ic"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="5dp"
                    android:text="OUTROS CONTATOS" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_custom_twitter"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_email_perfilVistado_investidor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/lato_regular"
                    android:text="Email" />

                <TextView
                    android:id="@+id/telefone_perfilVistado_investidor_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/lato_regular"
                    android:text="Tel" />

            </RelativeLayout>

            <LinearLayout style="@style/TextInputRegister">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/localization_ic"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="5dp"
                    android:text="LOCAL" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_custom_twitter"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/estado_perfilVistado_investidor_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/lato_regular"
                    android:text="Estado" />

                <TextView
                    android:id="@+id/rua_perfilVistado_investidor_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/lato_regular"
                    android:text="Rua" />

                <TextView
                    android:id="@+id/bairro_perfilVistado_investidor_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/lato_regular"
                    android:text="Bairro" />
            </RelativeLayout>
            <TextView
                android:paddingTop="15dp"
                android:paddingBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Aplicativo realizado pelos alunos de Sistemas / Projeto Aplicado - FHO 2019 / Aplicativo para estudo disponibizado em versão teste."
                android:textColor="@color/colorCinza"
                android:textSize="12sp"
                app:fontFamily="@font/lato_regular"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>


        </LinearLayout>
    </ScrollView>
</FrameLayout>


