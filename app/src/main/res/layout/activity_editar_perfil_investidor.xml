<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <ScrollView
        android:id="@+id/scrollView_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activity.login.CadastroLoginActivity">


        <LinearLayout
            android:id="@+id/linearLayout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">


            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTransparenteDark"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/investidor_icon2"
                            android:scaleType="fitXY" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="50dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ic_plus"
                            android:layout_marginLeft="30dp" />



                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>


            <TextView
                style="@style/TitleRegister"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Editar Perfil"
                app:fontFamily="@font/lato_regular" />
            <TextView
                style="@style/TitleRegister"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Escolha o campo de que deseja alterar"
                android:textSize="18sp"
                app:fontFamily="@font/lato_regular" />


            <android.support.design.widget.TextInputLayout style="@style/TextInputRegister">

                <EditText
                    android:id="@+id/nome_editar_investidor_id"
                    style="@style/EditTextRegister"
                    android:hint="Nome Completo *"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout style="@style/TextInputRegister">

                <EditText
                    android:id="@+id/email_editar_investidor_id"
                    style="@style/EditTextRegister"
                    android:hint="Email para contato *"
                    android:inputType="textEmailAddress" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout style="@style/TextInputRegister">

                <EditText
                    android:id="@+id/telefone_editar_investidor_id"
                    style="@style/EditTextRegister"
                    android:hint="Número para contato *"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout style="@style/TextInputRegister">

                <EditText
                    android:id="@+id/empresa_editar_investidor_id"
                    style="@style/EditTextRegister"
                    android:hint="Empresa (caso seja autônomo informe) *"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                style="@style/TextInputRegister">

                <EditText
                    android:id="@+id/data_nascimento_editar_investidor_id"
                    style="@style/EditTextRegister"
                    android:layout_marginBottom="10dp"
                    android:hint="Data de Nascimento *"
                    android:inputType="date" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/TextInputRegister">

                <EditText
                    android:id="@+id/cep_editar_investidor_id"
                    style="@style/EditTextRegister"
                    android:layout_marginBottom="10dp"
                    android:hint="CEP *"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/TextInputRegister">

                <EditText
                    android:id="@+id/rua_editar_investidor_id"
                    style="@style/EditTextRegister"
                    android:layout_marginBottom="10dp"
                    android:hint="Logradouro"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/TextInputRegister">

                <EditText
                    android:id="@+id/bairro_editar_investidor_id"
                    style="@style/EditTextRegister"
                    android:layout_marginBottom="10dp"
                    android:hint="Bairro"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/TextInputRegister">

                <EditText
                    android:id="@+id/cidade_editar_investidor_id"
                    style="@style/EditTextRegister"
                    android:layout_marginBottom="10dp"
                    android:hint="Cidade"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/TextInputRegister">

                <EditText
                    android:id="@+id/estado_editar_investidor_id"
                    style="@style/EditTextRegister"
                    android:layout_marginBottom="10dp"
                    android:hint="Estado"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                style="@style/TitleRegister"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Manter-me como: "
                android:textSize="18sp"
                app:fontFamily="@font/lato_regular" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/radioGroup_editar"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp">

                <RadioButton
                    android:id="@+id/pessoaFisica_editar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pessoa Fisíca"
                    android:textColor="@color/colorCinza"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"/>

                <RadioButton
                    android:id="@+id/pessoaJuridica_editar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pessoa Juriídica"
                    android:textColor="@color/colorCinza"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"/>

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputPF_editar"
                    style="@style/TextInputRegister"
                    android:visibility="gone">


                    <EditText
                        android:id="@+id/cpf_editar_investidor_id"
                        style="@style/EditTextRegister"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:hint="CPF *"
                        android:inputType="number"
                        android:visibility="gone" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputPJ_editar"
                    style="@style/TextInputRegister"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/cnpj_editar_investidor_id"
                        style="@style/EditTextRegister"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:hint="CNPJ *"
                        android:inputType="number"
                        android:visibility="gone" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/botao_concluir_edicao_investidor_id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="6dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorTransparenteDark"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="100dp"
                    android:layout_marginLeft="110dp"
                    android:gravity="center_vertical"
                    android:text="CONCLUIR EDIÇÃO"
                    android:textAllCaps="false"
                    android:textColor="@color/colorCinza"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/poppins_medium" />

            </RelativeLayout>

            <TextView
                android:paddingTop="15dp"
                android:paddingBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:text="Não deixa de preencher nenhum campo. Toda informaçāo é necessária*"
                android:textColor="@color/colorCinza"
                android:textSize="12sp"
                app:fontFamily="@font/lato_regular"
                android:layout_marginLeft="20dp" />


        </LinearLayout>

    </ScrollView>

</android.support.v4.widget.DrawerLayout>
