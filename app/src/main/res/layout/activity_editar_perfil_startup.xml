<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <ScrollView
        android:id="@+id/scrollView_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activity.login.CadastroLoginActivity">


        <LinearLayout
            android:id="@+id/linearLayout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">


            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp">

                        <ImageView
                            android:id="@+id/foto_editar_startup_id"
                            android:layout_width="98dp"
                            android:layout_height="100dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/startup_icon2"
                            android:scaleType="fitXY" />

                        <ImageView
                            android:id="@+id/icone_editar_startup_id"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="50dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ic_plus"
                            android:layout_marginLeft="30dp" />

                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>


            <TextView
                style="@style/TitleRegister"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Editar Perfil"
                app:fontFamily="@font/lato_regular" />
            <TextView
                style="@style/TitleRegister"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:text="Escolha o campo de que deseja alterar"
                android:textSize="18sp"
                app:fontFamily="@font/lato_regular" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="0dp"
                android:text="BIOGRAFIA" />

            <EditText
                android:id="@+id/biografia_editar_startup_id"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:padding="10dp"
                android:gravity="start"
                android:layout_marginBottom="10dp"
                android:hint="Escreva aqui"
                android:fontFamily="@font/lato_regular"
                android:textSize="14dp"
                android:background="@drawable/button_custom_twitter"
                android:minLines="100"
                android:maxLines="100"
                android:scrollbars="vertical"
                android:inputType="textMultiLine"/>


            <android.support.design.widget.TextInputLayout style="@style/TextInputRegister">

                <EditText
                    android:id="@+id/razao_editar_startup_id"
                    style="@style/EditTextRegister"
                    android:hint="Razão Social *"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout style="@style/TextInputRegister">

                <EditText
                    android:id="@+id/nome_editar_startup_id"
                    style="@style/EditTextRegister"
                    android:hint="Nome Fantasia *"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout style="@style/TextInputRegister">

                <EditText
                    android:id="@+id/email_editar_startup_id"
                    style="@style/EditTextRegister"
                    android:hint="Email para contato *"
                    android:inputType="textEmailAddress" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout style="@style/TextInputRegister">

                <EditText
                    android:id="@+id/telefone_editar_startup_id"
                    style="@style/EditTextRegister"
                    android:hint="Número para contato *"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                style="@style/TextInputRegister">

                <EditText
                    android:id="@+id/cep_editar_startup_id"
                    style="@style/EditTextRegister"
                    android:layout_marginBottom="10dp"
                    android:hint="CEP *"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/TextInputRegister">

                <EditText
                    android:id="@+id/rua_editar_startup_id"
                    style="@style/EditTextRegister"
                    android:layout_marginBottom="10dp"
                    android:hint="Logradouro"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/TextInputRegister">

                <EditText
                    android:id="@+id/bairro_editar_startup_id"
                    style="@style/EditTextRegister"
                    android:layout_marginBottom="10dp"
                    android:hint="Bairro"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/TextInputRegister">

                <EditText
                    android:id="@+id/cidade_editar_startup_id"
                    style="@style/EditTextRegister"
                    android:layout_marginBottom="10dp"
                    android:hint="Cidade"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/TextInputRegister">

                <EditText
                    android:id="@+id/estado_editar_startup_id"
                    style="@style/EditTextRegister"
                    android:layout_marginBottom="10dp"
                    android:hint="Estado"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                    style="@style/TextInputRegister">
                <EditText
                        android:id="@+id/cnpj_editar_startup_id"
                        style="@style/EditTextRegister"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:hint="CNPJ *"
                        android:inputType="number"/>
                </android.support.design.widget.TextInputLayout>


            <RelativeLayout
                android:id="@+id/botao_concluir_edicao_startup_id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="6dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_ronded"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="120dp"
                    android:layout_marginLeft="110dp"
                    android:gravity="center_vertical"
                    android:text="CONCLUIR EDIÇÃO"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/lato_regular" />

            </RelativeLayout>

            <TextView
                android:paddingTop="15dp"
                android:paddingBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:text="Não deixe de preencher nenhum campo. Toda informaçāo é necessária *"
                android:textColor="@color/colorCinza"
                android:textSize="12sp"
                app:fontFamily="@font/lato_regular"
                android:layout_marginLeft="20dp" />


        </LinearLayout>

    </ScrollView>

</android.support.v4.widget.DrawerLayout>
